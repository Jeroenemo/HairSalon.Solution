@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add a new Stylist</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})

  @Html.LabelFor(model => model.Style)
  @Html.TextBoxFor(model => model.Style, new {required = "required"})

  <input type="submit" value="Add new stylist"/>
}

<p>@Html.ActionLink("Show all stylists", "Index")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Edit</h1>

<h3>Edit this stylist: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new {@required = "required"})

  @Html.LabelFor(model => model.Style)
  @Html.TextBoxFor(model => model.Style, new {@required = "required"})

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Back to stylists", "Index")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Edit</h1>

<h3>Edit this client: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new {required = "required"})

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Back to clients", "Index")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
